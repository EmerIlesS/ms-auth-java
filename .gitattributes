# Normalización de archivos de texto
* text=auto

# Archivos de texto específicos
*.java text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.properties text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.sql text eol=lf
*.graphql text eol=lf
*.graphqls text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf
*.cmd text eol=crlf
*.bat text eol=crlf
mvnw text eol=lf
mvnw.cmd text eol=crlf

# Archivos binarios
*.jar binary
*.war binary
*.ear binary
*.db binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

# Ignorar diferencias en los archivos generados
target/ -diff
*.class -diff
*.jar -diff
*.war -diff
